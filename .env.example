# Настройки бота
BOT_TOKEN=your_telegram_bot_token

# URL мини-приложения
MINI_APP_URL=https://example.com

# Настройки OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Настройки базы данных
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=ai_bot

# Настройки API
API_HOST=0.0.0.0
API_PORT=5000
DEBUG=True

# Настройки JWT
SECRET_KEY=your_jwt_secret_key
JWT_EXPIRATION_TIME=3600

# Настройки реферальной системы
REFERRAL_BONUS_REQUESTS=5

# Настройки платежной системы
PAYMENT_API_KEY=your_payment_system_key
PAYMENT_CALLBACK_URL=https://example.com/api/payment/callback

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=app.log

# Django настройки
DJANGO_SECRET_KEY=your_django_secret_key
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your_domain.com
DJANGO_DEBUG=True 